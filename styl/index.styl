.aws {
  &__instance, &__bucket {
    position: relative;
    padding: 9px 15px 9px 30px;

    &:before {
      content: " ";
      display: block;

      width:  8px;
      height: 8px;

      position: absolute;

      top:  15px;
      left: 12px;

      border-radius: 4px;

      background-color: #000;
    }

    &--running {
      color: $success-color;

      &:before {
        background: $success-color;
      }
    }

    &--stopped {
      color: $failure-color;

      &:before {
        background: $failure-color;
      }
    }

    &__id {
      position: absolute;
      right: 15px;
      font-size: 12px;
      color: darken($main-txt-color, 20);
    }

    &__name {
      font-weight: 600;
      color: darken($main-txt-color, 20);
    }

    &__state, &__date {
      font-weight: 600;
      font-size: 80%
      &:before {
        content: ' ('
      }
      &:after {
        content: ')'
      }
    }
  }

  &__stack {
    padding: 9px 15px;
  }
}
